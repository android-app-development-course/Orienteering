<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/title2"
        android:id="@+id/title2"/>
    <TextView
        android:layout_below="@+id/title2"
        android:layout_marginTop="5dp"
        android:id="@+id/goal1"
        android:text="积分赛"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/goal1"
        android:id="@+id/goal2"
        android:text="规则摘要:"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/goal2"
        android:layout_marginLeft="5dp"
        android:id="@+id/goal_intro"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/goal_map"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@mipmap/background_rule2"
        android:layout_below="@+id/goal_intro"
        android:layout_width="match_parent"
        android:layout_height="190dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/goal_map"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/goal_setup"
            android:text="创建比赛"
            android:layout_weight="1"
            android:background="@drawable/shape_btn_startcompile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"/>
        <Space
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_weight="1"
            android:id="@+id/goal_cancel"
            android:background="@drawable/shape_btn_startcompile"
            android:text="退出"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"/>
    </LinearLayout>


</RelativeLayout>
